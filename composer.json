{
    "name": "hercules-api-generator/hercules-api-generator",
    "description": "Automatic Postman collection generator for Laravel microservices with git hooks integration",
    "type": "library",
    "keywords": ["laravel", "postman", "api", "documentation", "git-hooks"],
    "license": "MIT",
    "authors": [
        {
            "name": "GMCore Team",
            "email": "dev@gmcore.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2|^8.3|^8.4",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/console": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/routing": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Hercules\\ApiGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hercules\\ApiGenerator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "format-check": "vendor/bin/pint --test"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hercules\\ApiGenerator\\HerculesApiGeneratorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
